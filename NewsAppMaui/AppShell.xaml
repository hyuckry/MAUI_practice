<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NewsAppMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NewsAppMaui"
    xmlns:views="clr-namespace:NewsAppMaui.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab x:Name="HomeTab" Title="Home">
            <ShellContent
                ContentTemplate="{DataTemplate views:HomePage}"
                Icon="home.png"
                Route="home" />
        </Tab>
        <Tab x:Name="SectionsTab">
            <ShellContent
                ContentTemplate="{DataTemplate views:SectionPage}"
                Icon="categories.png"
                Route="sections" />
        </Tab>
        <Tab x:Name="BookmarksTab">
            <ShellContent ContentTemplate="{DataTemplate views:BookmarkPage}" Route="bookmarks" />
        </Tab>
        <Tab x:Name="ProfileTab">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" Route="profile" />
        </Tab>
    </TabBar>

</Shell>
